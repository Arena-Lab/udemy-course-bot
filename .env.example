# ==============================================
# UDEMY COURSE BOT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# REQUIRED TELEGRAM SETTINGS
# ==============================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your channel username (with @) or channel ID
TELEGRAM_CHANNEL_ID=@your_channel_username

# Your Telegram user ID (for admin commands)
TELEGRAM_ADMIN_ID=your_admin_user_id

# ==============================================
# BOT BRANDING & CUSTOMIZATION
# ==============================================
BOT_NAME=Free Course Hunter
BOT_LOGO_EMOJI=ðŸŽ“
CHANNEL_NAME=Your Channel Name
CHANNEL_LINK=https://t.me/your_channel
SECRET_CHANNEL_TEXT=ðŸ”¥Secret channel, Join Now or Regret later
INVITE_FRIENDS_TEXT=ðŸ”¶ Invite Friendsâž¤

# ==============================================
# SCRAPING CONFIGURATION
# ==============================================
# How often to scrape (in seconds) - 300 = 5 minutes
SCRAPING_INTERVAL=300

# Maximum courses to process per scraping session
MAX_COURSES_PER_RUN=10

# Enable duplicate detection to avoid posting same course twice
ENABLE_DUPLICATE_DETECTION=true

# How long courses stay valid (in hours)
COURSE_EXPIRY_HOURS=48

# ==============================================
# WEBSITE SCRAPING TOGGLES
# ==============================================
# Enable/disable specific scrapers (true/false)
ENABLE_REAL_DISCOUNT=true
ENABLE_DISCUDEMY=true
ENABLE_UDEMY_FREEBIES=true
ENABLE_YOFREESAMPLES=true
ENABLE_COURSESITY=true

# ==============================================
# REQUEST SETTINGS
# ==============================================
# Timeout for web requests (seconds)
REQUEST_TIMEOUT=30

# Delay between requests (seconds) - helps avoid rate limiting
REQUEST_DELAY=2

# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_FILE=courses.db
BACKUP_INTERVAL=24

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
MAX_LOG_SIZE=10
LOG_BACKUP_COUNT=5

# ==============================================
# MESSAGE FORMATTING OPTIONS
# ==============================================
# Include these details in course messages (true/false)
INCLUDE_COURSE_RATING=true
INCLUDE_STUDENT_COUNT=true
INCLUDE_COURSE_DURATION=true
INCLUDE_LANGUAGE=true
INCLUDE_LAST_UPDATED=true

# ==============================================
# ADVANCED SETTINGS
# ==============================================
ENABLE_WEBHOOKS=false
WEBHOOK_URL=
ENABLE_ANALYTICS=true
ENABLE_ERROR_NOTIFICATIONS=true
