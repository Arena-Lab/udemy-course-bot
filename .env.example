# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHANNEL_ID=
TELEGRAM_ADMIN_ID=



# Scraping Configuration
SCRAPING_INTERVAL=300  # seconds (5 minutes to prevent overlap)
MAX_COURSES_PER_RUN=5   # Reduced to prevent long posting sessions
ENABLE_DUPLICATE_DETECTION=true
COURSE_EXPIRY_HOURS=12  # Even shorter expiry for fresher content

# Website Scraping Settings
ENABLE_DISCUDEMY=true

# Request Settings
REQUEST_TIMEOUT=30
REQUEST_DELAY=3  # Increased delay to avoid rate limits
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Telegram Rate Limiting Settings
TELEGRAM_POST_DELAY=5  # seconds between posts to avoid FloodWait (recommended: 2-5 seconds)
TELEGRAM_MAX_POSTS_PER_MINUTE=20  # maximum posts per minute (Telegram allows ~25-30)
TELEGRAM_BURST_LIMIT=5  # maximum posts in quick succession before longer delay
TELEGRAM_BURST_DELAY=10  # seconds to wait after burst limit reached

# Database Configuration
DATABASE_FILE=courses.db
BACKUP_INTERVAL=24  # hours

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
MAX_LOG_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# Message Formatting
INCLUDE_COURSE_RATING=true
INCLUDE_STUDENT_COUNT=true
INCLUDE_COURSE_DURATION=true
INCLUDE_LANGUAGE=true
INCLUDE_LAST_UPDATED=true

# Advanced Settings
ENABLE_WEBHOOKS=false
WEBHOOK_URL=
ENABLE_ANALYTICS=true
ENABLE_ERROR_NOTIFICATIONS=true
